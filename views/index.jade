extends layout

block content
    .mdl-grid
        .mdl-cell.mdl-cell--12-col
            h1.mytitle #{title}
            div.container
                div.list
                    for item in results
                        div.card.ripple.mdl-card__title
                            h5.mdl-card__title= "Information about : " + item.county.value
                            p.mdl-card__supporting-text= "Unique " + item.county.value + "'s code: " + item.code.value + "\n"
                            p.mdl-card__supporting-text= "Email address: " + item.email.value
                            div.mdl-card__actions.mdl-card--border.mybutton
                                a.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect(href="http://localhost/hospital/" + item.code.value) More information
